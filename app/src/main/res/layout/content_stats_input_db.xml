<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/BaseStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DualBladesIcon"
        android:background="@drawable/roundedcorners"
        android:padding="20dp">

        <EditText
            android:id="@+id/DamageInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/physical_damage_label"
            android:inputType="number" />

        <TextView
            android:id="@+id/MainElementLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MainElementSelect"
            android:layout_alignStart="@+id/ElementSelect"
            android:layout_alignLeft="@+id/MainElementSelect"
            android:text="Element"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/MainElementSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/MainElementInput"
            android:layout_alignBottom="@+id/MainElementInput"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/MainElementInput" />

        <EditText
            android:id="@+id/MainElementInput"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DamageInput"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/elemental_input_label"
            android:inputType="number" />

        <TextView
            android:id="@+id/SubElementSelectLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/SubElementSelect"
            android:layout_alignLeft="@+id/SubElementSelect"
            android:text="Sub Element"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/SubElementSelect"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/MainElementSelect"
            android:layout_alignLeft="@+id/MainElementSelect"
            android:layout_alignTop="@+id/SubElementInput"
            android:layout_alignBottom="@+id/SubElementInput"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/SubElementInput" />

        <EditText
            android:id="@+id/SubElementInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MainElementInput"
            android:layout_alignStart="@+id/MainElementInput"
            android:layout_alignLeft="@+id/MainElementInput"
            android:layout_alignEnd="@+id/AffinityInput"
            android:layout_alignRight="@+id/AffinityInput"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/elemental_input_label"
            android:inputType="number" />

        <EditText
            android:id="@+id/AffinityInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SubElementInput"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:elegantTextHeight="false"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/affinity_label"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/ModeSelectLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AffinityInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/mode_select_label"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/ModeSelect"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/ModeSelectLabel"
            android:layout_alignStart="@+id/CalculateButton"
            android:layout_alignLeft="@+id/CalculateButton"
            android:layout_alignEnd="@+id/DualBladesBanner"
            android:layout_alignRight="@+id/DualBladesBanner"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:isScrollContainer="false"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/StyleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ModeSelect"
            android:layout_marginTop="10dp"
            android:text="@string/style_label"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/StyleSelect"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/StyleLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:prompt="@string/style_select_label"
            android:spinnerMode="dropdown" />

        <RelativeLayout
            android:id="@+id/Sharpness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/StyleLabel"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/SharpnessLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-132dp"
                android:layout_marginRight="-132dp"
                android:layout_toStartOf="@+id/SharpnessSelect"
                android:layout_toLeftOf="@+id/SharpnessSelect"
                android:text="@string/sharpness_label"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/SharpnessSelect"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/SharpnessLabel"
                android:gravity="center"
                android:spinnerMode="dropdown" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>