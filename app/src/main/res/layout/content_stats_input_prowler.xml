<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/BaseStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProwlerIcon"
        android:background="@drawable/roundedcorners"
        android:padding="20dp"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/BeastModeCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FuryStateDisclaimer"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="Beast Mode" />

        <EditText
            android:id="@+id/DamageInputP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/physical_damage_label"
            android:inputType="number" />

        <TextView
            android:id="@+id/ElementLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ElementSelect"
            android:layout_alignStart="@+id/ElementSelect"
            android:layout_alignLeft="@+id/ElementSelect"
            android:text="Element"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/ElementSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ElementInputP"
            android:layout_alignBottom="@+id/ElementInputP"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/ElementInputP" />

        <EditText
            android:id="@+id/ElementInputP"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DamageInputP"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/elemental_input_label"
            android:inputType="number" />

        <EditText
            android:id="@+id/AffinityInputP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ElementSelect"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:elegantTextHeight="false"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/affinity_label"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/BoomerangSelectLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AffinityInputP"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="Boomerang"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/BoomerangSelect"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/BoomerangSelectLabel"
            android:gravity="center"
            android:prompt="@string/style_select_label"
            android:spinnerMode="dropdown" />

        <CheckBox
            android:id="@+id/FuryStateCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Sharpness"
            android:layout_alignTop="@+id/ProwlerTypeSelectLabel"
            android:layout_alignParentRight="true"
            android:checked="false"
            android:text="Fury State" />

        <TextView
            android:id="@+id/FuryStateDisclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FuryStateCheck"
            android:layout_alignLeft="@+id/FuryStateCheck"
            android:layout_alignRight="@+id/FuryStateCheck"
            android:text="FURY STATE INCREASES AFFINITY BY 30%"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/ProwlerTypeSelectLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BoomerangSelect"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="Prowler Type"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/ProwlerTypeSelect"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ProwlerTypeSelectLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <RelativeLayout
            android:id="@+id/Sharpness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/BoomerangSelectLabel"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/SharpnessLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/sharpness_label"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/SharpnessSelect"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/SharpnessLabel"
                android:gravity="center"
                android:spinnerMode="dropdown" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>