<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/SupportSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MonsterHitzones"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedcorners"
        android:padding="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/SupportSkillsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Support Skills"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/SupportSkillsSelect"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/SupportSkillsLabel"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/WeaponUpgradeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SupportSkillsSelect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="Weapon Upgrade (+20 Attack, +30% Affinity)" />
    </RelativeLayout>
</RelativeLayout>